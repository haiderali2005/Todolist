@model IEnumerable<WebApplication24.Models.Todolist>

@{
    ViewData["Title"] = "Index";
}

<h1>To Do List</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-dark table-active" >
    <thead>
        <tr>
            <th>
               Title
            </th>
            <th>
                Complete or Not
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                <input  type="checkbox"
                    @if(item.iscomplete){
                        @:checked
                    }
                    else
                    {
                       @: 
                    }
                    />
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
